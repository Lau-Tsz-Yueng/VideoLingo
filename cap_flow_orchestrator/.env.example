MONGO_URI=mongodb://localhost:27017/capflow
VL_POSTS_COLLECTION=posts
VL_JOBS_COLLECTION=videolingo_jobs
VL_WHITELIST_USER_IDS=

# Pod HTTP endpoint exposed from the A5000 VideoLingo server.
VL_POD_RUN_URL=http://127.0.0.1:8000/run
VL_POD_TIMEOUT=7200

# Output storage
VL_OUTPUT_BUCKET=cw-dev-hls-output-bucket
VL_OUTPUT_PREFIX=videolingo/jobs

# Optional defaults passed to VideoLingo
VL_SOURCE_LANG=en
VL_TARGET_LANG=zh
VL_ENABLE_DUBBING=0
VL_HLS_SEGMENT=6

# AWS credentials used by boto3 to read/write S3 (or rely on instance roles)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=ap-southeast-1
